<div class="file">
  <div class="file__image">
    <a class="file__image-link{{#ifCond type 'video'}} video-item__image{{/ifCond}}{{#ifCond
            type 'audio'}} file__image-link--audio{{/ifCond}}" href="{{url}}">
      {{#if img}}
        {{> components/image img=img fallback-ext=ext}}
      {{/if}}
    </a>
  </div>
  <div class="file__info card">
    <span class="file__label"><a class="file__text-link" href="{{label-url}}">{{label}}</a></span>
    <span class="file__title"><a class="file__text-link" href="{{url}}">{{title}}</a></span>
    <div class="file__meta">
      <span class="file__category">{{category}}</span>
      <time class="file__pubdate" datetime="{{datetime}}">{{time}}</time>
    </div>
  </div>
</div>
