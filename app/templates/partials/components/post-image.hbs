<figure class="section-post__image section-post__image--caption">
  {{#if image}}
    {{#if png}}
      {{> components/image-fit content=true img=image fallback-ext="png"}}
    {{else}}
      {{> components/image-fit content=true img=image fallback-ext="jpg"}}
    {{/if}}
  {{else}}
    {{> blocks/image-fake size="940x440"}}
  {{/if}}
  {{#if caption}}
  <figcaption class="section-post__image__caption">{{{caption}}}</figcaption>
  {{/if}}
</figure>
