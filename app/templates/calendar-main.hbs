{{!Православный календарь}}

{{> layout/header page-breadcrumbs=calendar-main.page-breadcrumbs }}

<div class="container page__container">
  <main class="page__content">
    {{#> pages/article/block/main
            title="Православный календарь"
    }}

      <div class="events">
        {{#each page-calendar-items}}
          {{#if this.event__day}}
            <div class="event">
              <p class="event__day">{{this.event__day}}</p>
              <h3 class="event__date">{{this.event__date}}</h3>
              <p class="event__old-date">{{this.event__old-date}}</p>
              {{#if this.event__read}}
                <a href="#" class="event__read">{{this.event__read}}</a>
              {{/if}}
              <p class="event__text1">{{this.event__text1}}</p>
              <p class="event__text2">{{this.event__text2}}</p>
              <p class="event__text3">{{this.event__text3}}</p>
              <p class="event__text1">{{this.event__text4}}</p>
              <p class="event__text4">{{this.event__text5}}</p>
            </div>
          {{/if}}
        {{/each}}

      </div>

    {{/pages/article/block/main}}
    {{> blocks/related }}
  </main>

  <aside class="page__aside">
    {{> pages/common/aside }}
  </aside>
</div>

{{> layout/footer }}
